<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :host_name, "Host Name:" %><br>
    <%= f.text_field :host_name %>
  </div>
  <div class="field">
    <%= f.label :player_name, "Player Name:" %><br>
    <%= f.text_field :player_name %>
  </div>
  <div class="field">
    <%= f.label :player_email, "Player's email: (Optional)" %><br>
    <%= f.text_field :player_email %>
  </div>
  <div class="field">
    <%= f.label :word, "Word:" %><br>
    <%= f.text_field :word %>
  </div>

  <%= f.hidden_field :player_cell, value: "" %>
  <%= f.hidden_field :lives, value: 6 %>
  <%= f.hidden_field :available_letters, value: ("a".."z").to_a %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
